#!/usr/bin/env bash

set -eu

cd $(git rev-parse --show-toplevel)

danger_path="$PWD/script/danger"

export BUNDLE_PATH="$danger_path/vendor/bundle"
export BUNDLE_GEMFILE="$danger_path/Gemfile"

bundle exec danger --dangerfile="$danger_path/Dangerfile.assert" --danger_id='assertions' --remove-previous-comments